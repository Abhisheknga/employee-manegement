<h2>Department</h2>
<table cellpadding="10">
	<tr>
		<td> <strong>Department Name:</strong> </td>
		<td> <%= @department.name %> </td>
	</tr>
	<tr>
		<td> <strong>Department Task:</strong> </td>
		<td> <%= @department.task%> </td>
	</tr>
	<tr>
		<td> <strong>Department Location:</strong> </td>
		<td> <%= @department.location%> </td>
	</tr>
</table>
<ul>
<h3>Employees</h3>
<% @department.employees.each do |employee| %>
<li><%= employee.name %> &nbsp;&nbsp;&nbsp;<%= link_to 'Show', employee %></li>
<% end %>
</ul>
<%= link_to 'Back', departments_path %>&nbsp;&nbsp;
<%= link_to "Home", controller: :home %>